
{% block main %}
<form action="{{path('app_results_csv')}}" method="post">
<div class="row">
    <div class="col mt-2">
        <select class="form-control" name="campaign" id="campaign" required>
        <option value="" disabled selected>Campaign</option>
            {% for campaign in campaigns %}
                <option value={{campaign.id}}>{{campaign.name}}</option>
            {% endfor %}
        </select>
    </div>
 <div class="col mt-2">
        <select class="form-control" name="supplier" id="supplier">
        <option value="" disabled selected>supplier</option>
            {% for supplier in suppliers %}
                <option value={{supplier.id}}>{{supplier.reference}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col mt-2">
        <select class="form-control" name="status" id="status" placeholder="status">
            <option value="" disabled selected>Status</option>
            <option value="accepted">Accepted</option>
            <option value="rejected">Rejected</option>
        </select>
    </div>
</div>
    <div class="row mt-2">
    <div class="col">
    <input class="form-control" type="datetime-local" name="startDate" id="startDate" required>
    </div>
    <div class="col">
    <input class="form-control" type="datetime-local" name="endDate" id="enDate" required>
    </div>
    <div class="col">
        <input  class="btn btn-primary" type="submit"  name="export" id="search" value="Export">
    </div>
</div>
</form>
{% endblock %}