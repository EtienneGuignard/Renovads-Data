
{% block main %}

<form action="{{path('app_report_results')}}" method="post">
<div class="row">
    <div class="col mt-2">
 
        <select class="form-control" name="campaign" id="campaign">
        <option value="" disabled selected>Campaign</option>
            {% for campaign in campaigns %}
                <option value={{campaign.id}}>{{campaign.name}}</option>
            {% endfor %}
        </select>
    </div>
  
 <div class="col mt-2">

        <select class="form-control" name="supplier" id="supplier">
        <option value="" disabled selected>supplier</option>
            {% for supplier in suppliers %}
                <option value={{supplier.id}}>{{supplier.reference}}</option>
            {% endfor %}
        </select>
    </div>

    <div class="col mt-2">
        <select class="form-control" name="status" id="status" placeholder="status">
            <option value="" disabled selected>Status</option>
            <option value="accepted">Accepted</option>
            <option value="rejected">Rejected</option>
        </select>
    </div>
</div>
    <div class="row mt-2">
    <div class="col">
    <input class="form-control" type="datetime-local" name="startDate" id="startDate">
    </div>
    <div class="col">
    <input class="form-control" type="datetime-local" name="endDate" id="enDate">
    </div>
    <div class="col">
        <input  class="btn btn-primary" type="submit"  name="search" id="search" value="Search">
    </div>
</div>

</form>

{% endblock %}