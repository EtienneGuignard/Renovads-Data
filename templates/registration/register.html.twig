{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    
    <div class="container-fuild" style="background-image: url(' {{ asset("../image/backgroundLogin.jpg") }} ');
        height: 94vh">
    <div class="row justify-content-center">
    <div class="col-xl-4">
    <h2 class="mt-4 text-white">Register</h2>
    {{ form_start(registrationForm) }}
        <label for="registration_form_email" class="mt-2">Email</label>
        {{ form_row(registrationForm.email, {}) }}
        <label for="registration_form_plainPassword" class="mt-2">Password</label>
        {{ form_row(registrationForm.plainPassword, {
            'attr':{'class':'form-control'}
        }) }}
  
        
        <div class="row">
        <div class="col-6">
        <label for="registration_form_firstName" class="mt-2">First name</label>
        {{ form_row(registrationForm.firstName, {}) }}
        </div>
        <div class="col-6">
        <label for="registration_form_lasName" class="mt-2">Last name</label>
        {{ form_row(registrationForm.lastName, {}) }}
        </div>
        </div>
        <label for="registration_form_company" class="mt-2">Company</label>
        {{ form_row(registrationForm.company, {}) }}

         <label for="registration_form_companyAddress" class="mt-2">Company address</label>
        {{ form_row(registrationForm.companyAddress, {}) }}
   
        <label for="registration_form_country" class="mt-2">Country</label>
        {{ form_row(registrationForm.country, {}) }}
        <label for="registration_form_zipCode" class="mt-2">Zip</label>
         {{ form_row(registrationForm.zipCode, {}) }}
         <label for="registration_form_vatNumber" class="mt-2">V.A.T.</label>
         {{ form_row(registrationForm.vatNumber, {}) }}
        {{ form_widget(registrationForm.agreeTerms, {
            
        }) }} <span class="ml-1">To register you have to agree to the terms and condition of renovads data</span>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary mt-3 w-50">Register</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
    </div>
    </div>

{% endblock %}
