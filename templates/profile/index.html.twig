{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

<div class="container justify-content-center mt-5 w-100 text-center">
	<div class="row">
	<a class="btn btn-primary w-25" href="{{path('app_profile_edit' ,  { 'id': app.user.id})}}">Edit Profile</a>
	<table class="table mt-4">
			<thead>
				<tr>
					<th scope="col-6 col-lg-4"></th>
					<th scope="col-6 col-lg-4"></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">Email</th>
					<td>{{ app.user.email }}</td>
				</tr>
				<tr>
					<th scope="row">Firstname</th>
					<td>{{ app.user.firstname }}</td>
				</tr>
				<tr>
					<th scope="row">Lastname</th>
					<td>{{ app.user.lastname }}</td>
				</tr>
				<tr>
					<th scope="row">Company</th>
					<td>{{ app.user.company }}</td>
				</tr>
				<tr>
					<th scope="row">Country</th>
					<td>{{ app.user.country}}</td>
				</tr>
				<tr>
					<th scope="row">Zip Code</th>
					<td>{{ app.user.zipCode}}</td>
				</tr>
				<tr>
					<th scope="row">Region</th>
					<td></td>
				</tr>
				<tr>
					<th scope="row">City</th>
					<td>{{ app.user.city}}</td>
				</tr> 
				<tr>
					<th scope="row">Company Address</th>
					<td>{{ app.user.companyAddress}}</td>
				</tr> 
				<tr>
					<th scope="row">registration Number</th>
					<td>{{ app.user.registrationNumber}}</td>
				</tr> 
			</tbody>
		</table>
	</div>
</div>
{% endblock %}
