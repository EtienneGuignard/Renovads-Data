{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Today's Leads{% endblock %}
{% block main %}
<div class="container">
    <div class="row">
        <div class="col-12 col-lg-6">
        {% include "admin/chart.html.twig" %}
        </div>
        <div class="col-12 col-lg-6">
            <table class="datagrid">
                <thead>
                    <tr>
                        <td>Supplier</td>
                        <td>lead Number</td>
                    </tr>
                </thead>
                <tbody>
                        {% for lead in Leads %}
        
                        <tr>
                            <td>{{lead.reference}}</td>
                            <td>{{lead.NumberOfLeads}}</td>
                        </tr>
                            
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
     <div class="row mt-5">
        <h2>Campaigns</h2>
     <div>

    <div class="row mt-2">
        {% for campaign in campaigns %}
           {% set url = ea_url()
                    .setController('App\\Controller\\Admin\\CampaignCrudController')
                    .setAction('detail')
                    .setEntityId(campaign.id) %}

            <div class="col-3 border d-flex justify-content-center align-items-center p-1">
            <a href="{{ url }}"> {{campaign.name}}</a>
            </div>
            <div class="col-3 border d-flex justify-content-center align-items-center p-1">
             {{campaign.client}}
            </div>

        {% endfor %}
    </div>
       {# <img src="https://www.dbevt.com/f3e9b2a1-5893-4bcc-bd8f-bdea2cd535bb/conversion.gif" width="1" height="1"> #}
<script src="https://cdn.databowlpages.com/js/dbevt-tracking.1.0.25.js"></script>
<script>
    var trackingOptions = new DbEvtTracking.OptionsObject("f3e6b843-cb69-4534-80d2-e28add56ade5", "e6799e7a-cf37-4d75-8a1e-3ffe2c19c939");
    var trackingClient = new DbEvtTracking.TrackingClient(trackingOptions);
    trackingClient.createRedirectClickEvent();
</script>

   </div>
    
{% endblock %}